<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation.xml"
    app:startDestination="@id/buildingFragment">

    <fragment
        android:id="@+id/buildingFragment"
        android:name="org.wit.inventorymanager.fragments.BuildingFragment"
        android:label="Location"
        tools:layout="@layout/fragment_building" >
        <action
            android:id="@+id/action_buildingFragment_to_buildingListFragment"
            app:destination="@id/buildingListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/stockFragment"
        android:name="org.wit.inventorymanager.fragments.StockFragment"
        android:label="fragment_stock"
        tools:layout="@layout/fragment_stock" />
    <fragment
        android:id="@+id/buildingListFragment"
        android:name="org.wit.inventorymanager.fragments.BuildingListFragment"
        android:label="fragment_building_list"
        tools:layout="@layout/fragment_building_list" >
        <action
            android:id="@+id/action_buildingListFragment_to_buildingFragment"
            app:destination="@id/buildingFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_buildingListFragment_to_stockFragment"
            app:destination="@id/stockFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>